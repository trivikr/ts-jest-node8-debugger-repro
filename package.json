{
  "name": "ts-jest-node8-debugger-repro",
  "version": "1.0.0",
  "description": "Repro repo for debugger stopping at incorrect line numbers in source files with ts-jest@20.0.13",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test": "npm run build && jest"
  },
  "keywords": [
    "Jest",
    "TypeScript",
    "Node 8",
    "ts-jest",
    "debugger"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Trivikram Kamat",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "22.0.0",
    "jest": "22.0.5",
    "ts-jest": "22.0.4",
    "typescript": "2.7.2"
  }
}
