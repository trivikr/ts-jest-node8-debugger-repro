{
  "name": "ts-jest-es2017-debugger-repro",
  "version": "1.0.0",
  "description": "Repro repo for debugger issue with TS target es2017 and ts-jest@20.0.x",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test": "npm run build && jest"
  },
  "keywords": [
    "Jest",
    "TypeScript",
    "es2017",
    "ts-jest",
    "debugger"
  ],
  "jest": {
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  },
  "author": "Trivikram Kamat",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "20.0.7",
    "jest": "20.0.4",
    "ts-jest": "20.0.13",
    "typescript": "2.4.2"
  }
}
