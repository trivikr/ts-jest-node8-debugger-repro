{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "preLaunchTask": "build",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache"],
      "cwd": "${workspaceRoot}",
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/build/"],
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
